{
  "name": "@fantasticfiasco/expect",
  "version": "1.0.0",
  "description": "A Node.js library written in TypeScript providing argument validation.",
  "keywords": [
    "expect",
    "argument",
    "validation"
  ],
  "homepage": "https://github.com/FantasticFiasco/expect",
  "repository": {
    "type": "git",
    "url": "https://github.com/FantasticFiasco/expect.git"
  },
  "bugs": {
    "url": "https://github.com/FantasticFiasco/expect/issues"
  },
  "author": "Mattias Kindborg <mattias.kindborg@gmail.com> (https://twitter.com/FantasticFiasco)",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "types": "./lib/index",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "clean": "rimraf \"./+(src|test)/**/*.+(d.ts|js|js.map)\" ./lib ./coverage",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "postbuild": "cpx \"./src/**/*.{d.ts,js}\" ./lib/",
    "pretest": "yarn run build",
    "test": "mocha --recursive",
    "lint": "tslint \"./src/**/*.ts\" --exclude \"./**/*.d.ts\"",
    "precoverage": "yarn run build",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec --recursive",
    "postcoverage": "remap-istanbul --input coverage/coverage.json --type lcovonly --output coverage/lcov.info",
    "precoverage:publish": "yarn run coverage",
    "coverage:publish": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "prepack": "yarn run test && yarn run lint"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/mocha": "2.2.47",
    "@types/node": "9.4.0",
    "chai": "4.1.2",
    "coveralls": "2.13.3",
    "cpx": "1.5.0",
    "istanbul": "0.4.5",
    "mocha": "5.0.0",
    "remap-istanbul": "0.10.1",
    "rimraf": "2.6.2",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  }
}
