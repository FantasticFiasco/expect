{
  "extends": ["github>FantasticFiasco/renovate-config"],
  "ignoreDeps": [
    "diff",
    "handlebars",
    "js-yaml",
    "lodash",
    "minimist",
    "node-notifier",
    "sshpk"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "ESLint packages"
    },
    {
      "matchPackagePatterns": ["jest"],
      "groupName": "Jest packages"
    }
  ]
}
